<header>
<div class="container">
	<div class="sixteen columns">
	
		<!-- Logo -->
		<div id="logo">
			<h1><a href="{{path('index')}}"><img src="{{asset('frontend/images/logo.png')}}" alt="Work Scout" /></a></h1>
		</div>

		<!-- Menu -->
		<nav id="navigation" class="menu">
			<ul id="responsive">

				<li><a href="{{path('index')}}" id="current">Home</a>
				</li>

				<li><a href="{{path('categories')}}">Categories</a>
					<ul>
						{% for categorie in categories %}
					    <li><a href="/recherche?q=&categories%5B%5D={{categorie.id}}&min=&max=&Filtrer=">{{categorie.nom}}</a></li>
                    {% endfor %}
					</ul>
				</li>

				<li><a href="{{path('joballrecherche')}}">Job</a>
				</li>
				<li><a href="#">Contact Us</a></li>
			</ul>

            {% if app.user %}
            <ul class="responsive float-right">
			
			     {% if is_granted('ROLE_RECRUITER') %}
				 <li><a href="{{path('admin')}}"><i class="fa fa-user"></i> Recruiter Space</a></li>
                {% elseif is_granted('ROLE_ADMIN')  %}
                 <li><a href="{{path('backend_admin_home')}}"><i class="fa fa-user"></i> Admin Space</a></li>
                {% else %}
				<li><a href="{{path('profile')}}"><i class="fa fa-user"></i> My Account</a></li>
				{% endif %}
                <li><a href="{{path('app_logout')}}"><i class="fa fa-user"></i> Log Out</a></li>
			</ul>
            {% else %}
			<ul class="responsive float-right">
				<li><a href="{{path('app_register')}}#tab2"><i class="fa fa-user"></i> Sign Up</a></li>
				<li><a href="{{path('app_login')}}"><i class="fa fa-lock"></i> Log In</a></li>
			</ul>
            {% endif %}
		</nav>

		<!-- Navigation -->
		<div id="mobile-navigation">
			<a href="#menu" class="menu-trigger"><i class="fa fa-reorder"></i> Menu</a>
		</div>

	</div>
</div>
</header>
