{% extends 'base.html.twig' %}
{% block title %}{% if app.user %}Profile : {{ app.user.nom }} {{ app.user.prenom }}{% endif %}{% endblock %}
{% block body %}
{% include 'header.html.twig' %}
{% if app.user %}
<div id="titlebar" class="single submit-page">
	<div class="container">

		<div class="sixteen columns">
			<h2><i class="fa fa-plus-circle"></i> Manage Profile/Edit Profile/CV</h2>
				{% for message in app.flashes('message') %}
				  <h4>{{message}}</h4>
		        {% endfor %}
		</div>

	</div>
</div>
<div class="container">
	
	<!-- Submit Page -->
	<div class="sixteen columns">
		<div class="submit-page">
		{{ form_start(form)}}
			<!-- Email -->
			<div class="form">
				{{ form_row(form.cvimage)}}
			</div>
			{{ form_row(form.submit)}}
			<div class="divider margin-top-0 padding-reset"></div>
			<a href="{{path('profile_condidat_modif_pdp')}}" class="button big margin-top-5">Profile Picture Settings <i class="fa fa-arrow-circle-right"></i></a>
			<a href="{{path('profile_condidat_modif')}}" class="button big margin-top-5">Back To Profile Settings <i class="fa fa-arrow-circle-right"></i></a>
			
        {{ form_end(form)}}
		</div>
	</div>

</div>
{% else %}
<div id="titlebar" class="single submit-page">
	<div class="container">

		<div class="sixteen columns">
			<h2><i class="fa fa-plus-circle"></i> Manage Profile/ Edit Profile / CV</h2>
		</div>

	</div>
</div>
<div class="container">
	
	<!-- Submit Page -->
	<div class="sixteen columns">
      <h3> You have to login first to access this page </h3>
	</div>

</div>
{% endif %}
{% include 'footer.html.twig' %}
</div>
<!-- Wrapper / End -->
{% endblock %}
